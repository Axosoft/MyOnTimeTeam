@model MyOnTimeTeam.Models.LogOnModel

@{
    ViewBag.Title = "Log On";
}

<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	<h3>Login</h3>
</div>
@using (Html.BeginForm("LogOn","Accounts", FormMethod.Post, new {@class = "modal-form"}))
{
	<div class="modal-body">
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		<fieldset>
			<legend>LogOnModel</legend>

			<div class="editor-label">
				@Html.LabelFor(model => model.OnTimeUrl)
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.OnTimeUrl)
				@Html.ValidationMessageFor(model => model.OnTimeUrl)
			</div>
		</fieldset>

		@section Scripts {
			@Scripts.Render("~/bundles/jqueryval")
		}

	</div>
	<div class="modal-footer">
		<input class="btn" type="button" data-dismiss="modal" value="Close" />
		<input class="btn btn-primary" type="submit" value="Login" />
	</div>
}